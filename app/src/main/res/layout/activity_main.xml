<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.clearc2.ltetestapplication.MainActivity">

    <TextView
        android:id="@+id/JALLEN_SPEECH"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="6pt"
        android:text="@+id/JALLEN_SPEECH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHorizontal_bias="0.5"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
    >
        <TextView
            android:id="@+id/JALLEN_CELLINFO"
            android:textSize="6pt"
            android:text="@+id/JALLEN_CELLINFO"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
        />
        <TextView
            android:id="@+id/JALLEN_RADIO"
            android:textSize="6pt"
            android:text="@+id/JALLEN_RADIO"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="5dp"
        />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
